{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "plugins": ["react", "simple-import-sort", "import"],
  "extends": ["plugin:react/recommended", "eslint:recommended"],
  "rules": {
    "no-debugger": 2,
    "no-else-return": 2,
    "no-nested-ternary": 0,
    "no-param-reassign": 2,
    "no-var": 2,
    "no-multi-spaces": 2,
    "no-undef-init": 2,
    "no-useless-escape": 2,
    "no-duplicate-imports": 2,
    "react/react-in-jsx-scope": 0,
    "react/jsx-key": 0,
    "react/prop-types": 0,
    "react/jsx-no-target-blank": 0,
    "simple-import-sort/imports": 2,
    "simple-import-sort/exports": 2,
    "import/first": 2,
    "import/order": 2,
    "import/newline-after-import": 2,
    "import/no-duplicates": 2
  },
  "overrides": [
    {
      "files": ["**/*.js", "**/*.jsx"],
      "parserOptions": {},
      "rules": {}
    }
  ]
}
